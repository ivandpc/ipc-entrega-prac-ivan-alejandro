<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="720.0" stylesheets="@../style/login.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.LoginController">
   <children>
      <Pane prefHeight="122.0" prefWidth="720.0" styleClass="top" />
      <ImageView fitHeight="150.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true" y="-14.0">
         <image>
            <Image url="@../../icons/image-removebg-preview.png" />
         </image>
      </ImageView>
      <GridPane fx:id="fondo" alignment="CENTER" layoutX="-25.0" layoutY="-18.0" maxHeight="-Infinity" maxWidth="-Infinity" onMousePressed="#fondoClicked" prefHeight="450.0" prefWidth="720.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="179.0" minWidth="0.0" prefWidth="64.0" />
          <ColumnConstraints hgrow="NEVER" maxWidth="371.0" minWidth="250.0" prefWidth="371.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="350.0" prefHeight="350.0" vgrow="NEVER" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="registroButton" mnemonicParsing="false" onAction="#registro" text="¿No tienes cuenta? ¡Crea una!" />
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="mensaje" text="Bienvenido" visible="false" />
                  <Label />
                  <VBox alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="BOTTOM" text="Nombre de Usuario:" />
                                    <TextField fx:id="userText" alignment="TOP_LEFT" onAction="#nextUser" prefHeight="26.0" prefWidth="429.0" styleClass="button" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label alignment="CENTER_RIGHT" contentDisplay="BOTTOM" text="Contraseña:" />
                                    <PasswordField fx:id="passwordText" onAction="#nextPassword" prefHeight="26.0" prefWidth="401.0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Label fx:id="error" textFill="RED" />
                  <Button fx:id="iniciosesionButton" mnemonicParsing="false" onAction="#inicioSesion" prefHeight="26.0" prefWidth="143.0" text="Iniciar sesion" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
