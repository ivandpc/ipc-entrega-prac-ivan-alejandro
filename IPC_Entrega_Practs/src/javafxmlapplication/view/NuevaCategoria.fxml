<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.NuevaCategoriaController">
   <children>
      <BorderPane prefHeight="410.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="25.0" prefWidth="256.0" spacing="5.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="57.0" text="Nombre" />
                        <TextField fx:id="nombre" onAction="#nextUser" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" text="Descripcion" />
                        <TextField fx:id="descripcion" onAction="#nextUser" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <ButtonBar BorderPane.alignment="CENTER">
               <buttons>
                  <Button fx:id="conf" mnemonicParsing="false" onAction="#confirmar" prefHeight="15.0" prefWidth="83.0" text="Confirmar" />
               </buttons>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
