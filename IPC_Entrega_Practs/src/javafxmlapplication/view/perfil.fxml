<AnchorPane id="AnchorPane" prefHeight="620.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.controller.PerfilController">
   <children>
      <BorderPane prefHeight="620.0" prefWidth="1273.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <GridPane fx:id="fondo" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" onMousePressed="#fondoClicked" prefHeight="620.0" prefWidth="900.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="250.0" prefWidth="250.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" minHeight="350.0" prefHeight="350.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="263.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <ImageView fx:id="perfil" fitHeight="66.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../icons/default.png" />
                           </image>
                        </ImageView>
                        <Label text="Foto de Perfil" />
                        <Button fx:id="seleccion" mnemonicParsing="false" onAction="#singleFileChooser" text="Seleccionar Foto" />
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre:" />
                              <TextField fx:id="nombre" onAction="#nextNombre" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Apellidos:" />
                              <TextField fx:id="apellidos" onAction="#nextApellidos" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email:" />
                              <TextField fx:id="email" onAction="#nextEmail" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña:" />
                              <PasswordField fx:id="password" onAction="#nextPassword" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Repetir contraseña:" />
                              <PasswordField fx:id="password2" onAction="#nextPassword2" />
                           </children>
                        </HBox>
                        <Label fx:id="error" textFill="RED" />
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
                              <Button fx:id="confirmarBotton" mnemonicParsing="false" onAction="#confirmar" text="Confirmar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </center>
         <top>
            <ToolBar maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" BorderPane.alignment="CENTER">
               <items>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Perfil">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="994.0">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0">
                     <children>
                        <Separator orientation="VERTICAL" prefHeight="40.0" />
                        <MenuButton fx:id="toolbarUsername" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Username">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
                           </items>
                           <graphic>
                              <ImageView fx:id="toolbarImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../icons/default.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuButton>
                     </children>
                  </HBox>
               </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
